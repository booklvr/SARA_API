<section class="questions-container">

    <h1 class="heading-secondary">Questions</h1>
    
    <div class="questions">
        <p class="questions-1">1.  <span><%= questions.item1 %></span></p>
        <p class="questions-2">2.  <span><%= questions.item2 %></span></p>
        <p class="questions-3">3.  <span><%= questions.item3 %></span></p>
        <p class="questions-4">4.  <span><%= questions.item4 %></span></p>
    </div>
    
    <% if (currentUser) { %>
        <% if (String(currentUser._id) === String(questions.owner)) { %>
            <div class="icon-container">
                <a class="icon icon" href="/questions/confirmUpdate">
                    <i class="fas fa-edit"></i>
                </a>
                <a class="icon" href="/questions/confirmDelete">
                    <i class="fas fa-trash-alt"></i>
                </a>
            </div>
        <% } else { %>
            <a class="cta__button" href="/answers/<%= questions._id %>">Answer</a>
        <% } %>
    <% } else { %>
        <a class="cta__button" href="/answers/<%= questions._id %>">Answer</a>
    <% } %>    
</section>